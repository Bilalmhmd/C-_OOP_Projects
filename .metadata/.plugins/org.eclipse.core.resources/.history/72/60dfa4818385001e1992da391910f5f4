#include <iostream>
#include <string>
#include <vector>
using namespace std;

class User
{
private:
	string username;
	string password;
public:
	User(string name , string pass)
	{
		username = name;
		password = pass;
	}
};

class UserManger
{
private:
	vector <User> users; //create object of vector
public:
	void RegisterUser(void)
	{
		string username;
		string password;
		cout << "Enter User Name : ";
		cin >> username;
		cout << "Enter Password : ";
		cin >> password;

		User newUser(username,password);
		users.push_back(username,password);

		cout <<"\t\t User Register Successfully ....."<<endl;
	}
};





int main() {
	cout << "!!!Hello World!!!" << endl; // prints !!!Hello World!!!
	return 0;
}
